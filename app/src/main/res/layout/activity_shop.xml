<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    "


    <Button
        android:id="@+id/buttonViewCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:text="View Cart"
        android:textColor="@color/secondary_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFlowers"
        android:layout_width="408dp"
        android:layout_height="527dp"
        android:layout_below="@id/buttonViewCart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:clipToPadding="true"
        android:paddingHorizontal="16dp"
        android:paddingTop="0dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/icon_selected_color"
        app:itemIconSize="36dp"
        app:itemTextColor="@color/primary_3"
        app:itemIconTint="@color/primary_3"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textViewLogin"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="236dp"
        android:text="login please.."
        android:textColor="@color/secondary_2"
        android:textSize="16sp" />

</RelativeLayout>