        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="231dp"
        android:layout_height="73dp"
        android:layout_marginTop="76dp"
        android:textAlignment="center"
        android:text="You will be contacted shortly by admin regarding payment process and delivery!"
        app:layout_constraintEnd_toEndOf="@+id/textViewThank"
        app:layout_constraintStart_toStartOf="@+id/textViewThank"
        app:layout_constraintTop_toBottomOf="@+id/textViewThank" />
</androidx.constraintlayout.widget.ConstraintLayout>