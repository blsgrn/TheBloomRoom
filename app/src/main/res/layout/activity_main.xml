<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:padding="5dp"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        app:cardBackgroundColor="#33FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/textViewHome"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="10dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="99dp"
            android:layout_height="95dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/bouquet1" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="25%"
            android:textColor="@color/primary_2"
            android:textStyle="bold"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/textViewSpecialCollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="70dp"
            android:text="Special Collection"
            android:textColor="@color/ripple_color"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnShopNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="32dp"
            android:layout_gravity="bottom"
            android:text="Shop Now"
            android:textColor="@color/secondary_1"
            android:background="@drawable/button_background"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textViewByCategory"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView1"
        android:layout_alignEnd="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="99dp"
        android:padding="5dp"
        android:text="By Category"
        android:textAlignment="center"
        android:textColor="@color/primary_2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/scrollViewHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/textViewByCategory">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1"
            android:layout_marginVertical="10dp"
            android:background="#33FFFFFF"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/imageViewCollection1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/red_roses" />
                <TextView
                    android:id="@+id/textViewCollection1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Roses"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageViewCollection2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    app:srcCompat="@drawable/white_calla_lily" />
                <TextView
                    android:id="@+id/textViewCollection2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Roses"
                    android:gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageViewCollection3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/dendrobium_orchid" />
                <TextView
                    android:id="@+id/textViewCollection3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Roses"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageViewCollection4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/spring_tulips" />
                <TextView
                    android:id="@+id/textViewCollection4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Roses"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageViewCollection5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/rainbow_bouquet" />
                <TextView
                    android:id="@+id/textViewCollection5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Roses"
                    android:gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageViewCollection6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/golden_anniversary_orchid" />
                <TextView
                    android:id="@+id/textViewCollection6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Roses"
                    android:gravity="center" />

            </LinearLayout>



        </GridLayout>
    </HorizontalScrollView>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        app:itemBackground="@color/icon_selected_color"
        app:itemIconSize="36dp"
        app:itemTextColor="@color/primary_3"
        app:itemIconTint="@color/primary_3"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textViewSeeAll"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_above="@+id/scrollViewHome"
        android:layout_below="@+id/cardView1"
        android:layout_alignEnd="@+id/cardView1"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="7dp"
        android:autoLink="web"
        android:clickable="true"
        android:onClick="onLinkClick"
        android:text="See All"
        android:textSize="16sp"
        android:textColor="@color/secondary_1"
        android:textStyle="italic" />


</RelativeLayout>

